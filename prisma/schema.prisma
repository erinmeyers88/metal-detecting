generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid()) @db.Uuid
  email     String     @unique
  name      String?
  image     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  detectors Detector[]
  areas     Area[]
  finds     Find[]
}

model Detector {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  name      String
  brand     String?
  model     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  finds     Find[]

  @@index([userId])
}

model Area {
  id        String                  @id @default(uuid()) @db.Uuid
  userId    String                  @db.Uuid
  name      String
  notes     String?
  geom      Unsupported("geometry")
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt
  user      User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  finds     Find[]

  @@index([userId])
}

model Find {
  id         String                  @id @default(uuid()) @db.Uuid
  userId     String                  @db.Uuid
  detectorId String?                 @db.Uuid
  areaId     String?                 @db.Uuid
  title      String
  notes      String?
  geom       Unsupported("geometry")
  foundAt    DateTime?
  createdAt  DateTime                @default(now())
  updatedAt  DateTime                @updatedAt
  user       User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  detector   Detector?               @relation(fields: [detectorId], references: [id], onDelete: SetNull)
  area       Area?                   @relation(fields: [areaId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([detectorId])
  @@index([areaId])
}
